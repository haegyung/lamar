<!DOCTYPE html>
<html>
<head>
    {{! Document Settings }}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="designer" content="Jason Mcgwier" />
    <meta name="rating" content="general" />
    <meta name="keywords" content="{{meta_title}},{{tags}}" />
    <meta name="robots" content="index, follow" />

    {{! Mobile and Viewport }}
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="format-detection" content="telephone=yes" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    {{! OpenGraph for Facebook }}
    <meta property="og:title" content="{{meta_title}}" />
    <meta property="og:locale" content="en_US" />

    {{! Twitter Card }}
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content="{{meta_title}}" />

    {{! Icons }}
    <link rel="shortcut icon" href="{{asset "favicon.ico"}}">
    <link rel="icon" sizes="196x196" href="{{asset 'images/android-homescreen.png'}}" />
    <link rel="apple-touch-icon" href="{{asset 'images/apple-touch-icon.png'}}" />

    {{! Prerendering and Prefetching }}
    {{#if @blog.cover}}
        <link rel="prerender" href="{{@blog.cover}}" />
        <link rel="prefetch" href="{{@blog.cover}}" />
    {{/if}}
    <link rel="dns-prefetch" href="//fonts.googleapis.com/" />

    {{! Styles'n'Scripts }}
    <link rel="stylesheet" type="text/css" href="{{asset 'css/normalize.css'}}" />
    <link rel="stylesheet" type="text/css" href="{{asset 'css/basics.css'}}" />
    <link rel="stylesheet" type="text/css" href="{{asset 'css/animate.css'}}" />
    <link rel="stylesheet" type="text/css" href="{{asset 'css/highlight.css'}}" />
    <link rel="stylesheet" type="text/css" href="{{asset 'css/lamar.css'}}" />
    <script src="{{asset 'js/html5shiv-printshiv.js'}}"></script>
    <script src="{{asset 'js/respond.js'}}"></script>

    {{! Page-Specific Metadata }}
    {{{block "meta"}}}

    {{ghost_head}}

</head>
<body class="{{body_class}}">
    <nav class="animated fadeIn navigation">
        <div class="container">
            {{#if @blog.logo}}
            <a href="{{@blog.url}}" class="text-right sidebar brand">
                <img src="{{@blog.logo}}" alt="{{@blog.title}}" />
            </a>
            {{else}}
            <a href="{{@blog.url}}" class="content">{{@blog.title}}</a>
            {{/if}}
            {{navigation}}
        </div>
    </nav>
    <div class="main">
        {{{body}}}
    </div>
    <footer class="animated fadeIn" id="footer">
        <div class="container text-center">
          <section class="copyright"><a href="{{@blog.url}}">{{@blog.title}}</a> &copy; {{date format="YYYY"}}</section>
          <section class="poweredby"><span>Powered by <a href="https://ghost.org">Ghost</a> | Theme <a href="https://github.com/mcgwier/lamar" class="theme">Lamar</a></span></section>
        </div>
    </footer>

    {{ghost_foot}}

    {{! Deferred scripts }}
    <script src="{{asset 'js/fastclick.js'}}"></script>
    <script src="{{asset 'js/stellar.js'}}"></script>
    <script src="{{asset 'js/highlight.js'}}"></script>
    <script src="{{asset 'js/lamar.js'}}"></script>
    <script src="{{asset 'js/jquery.timeago.min.js'}}"></script>
    <script>jQuery(document).ready(function() { jQuery("time.timeago").timeago(); });</script>

</body>
</html>
